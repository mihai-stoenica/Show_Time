{% extends './layouts/base.html.twig' %}

{% block title %}Festival index{% endblock %}

{% block content %}

    <div class="overflow-x-auto">
        <div class="overflow-y-auto max-h-[500px]">
            <table class="table">
                <!-- head -->
                <thead class="sticky top-0 bg-base-200 z-2">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th class="text-center">Date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <!-- row 1 -->
                {% for festival in festivals %}
                    <tr>
                        <td>
                            <div>{{ festival.id }}</div>
                        </td>
                        <td>
                            <div class="flex items-center gap-3">
                                <div class="avatar">
                                    <div class="mask mask-squircle h-12 w-12">
                                        <img
                                            src="https://img.daisyui.com/images/profile/demo/2@94.webp" {# TODO #}
                                            alt="Avatar Tailwind CSS Component"/>
                                    </div>
                                </div>
                                <div>
                                    <div class="font-bold">{{ festival.name }}</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="text-center">{{ festival.startDate|date('d/m/Y') }}
                                - {{ festival.endDate|date('d/m/Y') }}</div>
                        </td>
                        <th>
                            <a href="{{ path('app_festival_show', {'id': festival.id}) }}"
                               class="btn btn-ghost btn-s">view</a>
                            <a href="{{ path('app_festival_edit', {'id': festival.id}) }}"
                               class="btn btn-ghost btn-s">edit</a>
                        </th>
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}

                </tbody>
                <!-- foot -->
            </table>
        </div>

        <a href="{{ path('app_festival_new') }}" class="btn btn-xs sm:btn-sm md:btn-md lg:btn-lg xl:btn-l">Add new
            festival</a>

    </div>

{% endblock %}
